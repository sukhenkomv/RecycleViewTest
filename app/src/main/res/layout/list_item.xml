<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/filmpage_background"
    android:gravity="center"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/actor_item_pointer_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="4dp"
        android:visibility="gone"
        app:srcCompat="@drawable/pointer" />

    <TextView
        android:id="@+id/actor_item_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Анджелина Джоли"
        android:textColor="@color/item_text_selector"
        android:textSize="16sp" />
</LinearLayout>